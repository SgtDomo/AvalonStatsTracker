<UserControl x:Class="Avalon_Stats.GeneralGameStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Avalon_Stats"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="GeneralGameStatsViewRoot">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Anzahl Spiele Insg.:</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GamesCount,ElementName=GeneralGameStatsViewRoot, Mode=OneWay}" IsEnabled="False"></TextBox>
    </Grid>
</UserControl>
